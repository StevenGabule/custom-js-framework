{
  "compilerOptions": {
    "target": "es2018",
    "module": "esnext",
    "strict": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "es2018",
      "dom"
    ],
    "types": [
      "node",
      "jest"
    ]
  },
  "jsx": "preserve",
  "jsxFactory": "createElement",
  "jsxFragmentFactory": "Fragment"
}